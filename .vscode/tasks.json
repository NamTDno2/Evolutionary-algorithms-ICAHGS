{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Project",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // ✅ Sửa đường dẫn include ở đây
                "-I${workspaceFolder}/src/header", 
                // ✅ Biên dịch tất cả các file .cpp
                "${workspaceFolder}/src/*.cpp",      
                "-o",
                "${workspaceFolder}/build/main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Biên dịch toàn bộ dự án"
        }
    ]
}